<%= notice %>
<h2>Editing Book</h2>
<%= form_with model:@book , local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<input type="submit" name="commit" value="Update Book" class="btn btn-success d-block" data-disable-with="Update Book">
<% end %>

<%= link_to "Show" , book_path(@book.id) %>
<%= link_to "Back" , books_path %>