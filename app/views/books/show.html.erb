<div class="row">
<%= render partial: 'users/list', locals: { book: @new_book , user: @user } %>
<%= notice %>
    <div class="col-md-8 offset-md-1">
        <table class="table">
            <h2>Book detail</h2>
            <tbody>
                <tr>
                    <td>
                        <%= link_to user_path(@user.id) do %>
                        <%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "default_image.jpg" %>
                        <% end %></br>
                        <%= link_to @user.name , user_path(@user.id) %>
                    </td>
                    <td><%= link_to @book.title %></td>
                    <td><%= @book.body %></td>
                <% if @book.user_id == current_user.id %>
                    <td>
                        <div class="btn btn-success btn-sm">
                            <%= link_to "Edit", edit_book_path(@book.id)%>
                        </div>
                    </td>
                    <td>
                        <div class="btn btn-danger btn-sm">
                            <%= link_to "Destroy", book_path(@book.id), method: :delete,  data: { confirm: '本当に消しますか？' }  %>
                        </div>
                    </td>
                <% end %>
                </tr>
            </tbody>
        </table>
    </div>
</div>