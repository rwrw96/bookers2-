<h1>User Info</h1>
<%= image_tag current_user.image.url if current_user.image? %>
<%= current_user.name %>
<%= current_user.introduction %>

<%= link_to "Update", edit_user_path(current_user.id) %>
<h2>New Book</h2>
<%= form_with model:@book , local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>opinion</p>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>


<tr>
<h2>Book detail</h2>
<th><%= link_to @user.name , user_path(@user.id) %></th>
<th><%= link_to @book.title %></th>
<th><%= @book.body %></th>
<% if @book.user_id == current_user.id %>
<th><%= link_to "edit", edit_book_path(@book.id) %></th>
<th><%= link_to "destroy", book_path(@book.id), method: :delete,  data: { confirm: '本当に消しますか？' }  %></th>
<% end %>
</tr><br>