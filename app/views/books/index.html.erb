<%= link_to "Bookers" , root_path %>
<%= link_to "Home" , user_path(current_user.id) %>
<%= link_to "Users" , users_path %>
<%= link_to "Books" , books_path %>
<%= link_to "logout" , destroy_user_session_path , method: :delete %>
<%= notice %>
<h1>User Info</h1>
<%= image_tag current_user.profile_image_id.url if current_user.profile_image_id? %>
<%= current_user.name %>
<%= current_user.introduction %>

<%= link_to "Update", edit_user_path(current_user.id) %>
<h2>New Book</h2>
<%= form_with model:@book , local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>opinion</p>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>

<% @books.each do |book| %>
<tr>
<th><%= link_to book.title, book_path(book.id) %></th>
<th><%= book.body %></th>
</tr><br>
<% end %>
