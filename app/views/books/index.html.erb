<%= render partial: 'users/list', locals: { book: @book, user: @user } %>

<div class="col-md-8 offset-md-1">
<% @books.each do |book| %>
<tr>
<th><%= link_to user_path(book.user_id) do %>
    <%= attachment_image_tag @user, :profile_image, size: "100x100" , fallback: "default_image.jpg"%>
    <% end %></th>
<th><%= link_to book.title, book_path(book.id) %></th>
<th><%= book.body %></th>
</tr><br>
<% end %>
</div>