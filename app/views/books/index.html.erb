<div class="row">
<%= render partial: 'users/list', locals: { book: @book, user: @user } %>
<div class="col-md-8 offset-md-1">
    <table class="table table-hover table-inverse">
    <h2>Books</h2>
    <thead>
         <th></th>
    <th>Title</th>
    <th>Opinion</th> 
    </thead>
   
           
    <tbody>
     <% @books.each do |book| %>
<tr>
<td><%= link_to user_path(book.user_id) do %>
    <%= attachment_image_tag @user, :profile_image, size: "40x40" , fallback: "default_image.jpg"%>
    <% end %>
</td>
<td><%= link_to book.title, book_path(book.id) %></td>
<td><%= book.body %></td>
</tr>
<% end %>   
    </tbody>

</table>
</div>
</div>