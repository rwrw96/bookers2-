<div class="row">
<%= render partial: 'users/list', locals: { book: @book , user: @user } %>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<% @books.each do |book| %>
<table class="table table-striped">
<tr>
<th><%= link_to user_path(book.user_id) do %>
    <%= attachment_image_tag @user, :profile_image, size: "100x100" %>
    <% end %></th>
<td>Title</td>
<td><%= link_to book.title, book_path(book.id) %></td>
<td>Opinion</td>
<td><%= book.body %></td>
</tr><br>
</table>
<% end %>
</div>
</div>            