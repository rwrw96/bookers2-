<div class="row">
<%= render partial: 'users/list', locals: { book: @book , user: @user } %>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table">
            <th></th>
            <th>Title</th>
            <th>OPinion</th>
</table>
<% @books.each do |book| %>
<table class="table">
<td><%= link_to user_path(book.user_id) do %>
    <%= attachment_image_tag @user, :profile_image, size: "40x40" %>
    <% end %></td>
<td><%= link_to book.title, book_path(book.id) %></td>
<td><%= book.body %></td>
</table>
<% end %>
</div>
</div>            