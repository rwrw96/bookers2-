<%= notice %>
<h2>User Info</h2>
<%= form_with model:@user , local:true do |f| %>
<p>Name</p>
<%= f.text_field :name%>
<p>Image</p>
<%= f.attachment_field :profile_image %>
<p>Introduction</p>  
<%= f.text_area :introduction %>
<input type="submit" name="commit" value="Update User" class="btn btn-success d-block" data-disable-with="Update User">
<% end %>
