<div class="col-md-3">
    <% if user_signed_in? %>
<body>
    <%= notice %>
    <%= alert %>
        <h2>User Info</h2>
            <td><%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg" %></td>
                <table class="table">
                    <tr>
                        <th>name</th>
                        <th><%= user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= user.introduction %></th>
                    </tr>
                </table>
                    <%= link_to edit_user_path(user.id) , class:"btn btn-outline-secondary btn-block" do %>
                    <div class="fas fa-user-cog"></div>
                    <% end %>
        <h2>New book</h2>
            <%= form_with model:book , local:true do |f| %>
                <p>Title</p>
                    <%= f.text_field :title %>
                <p>Opinion</p>
                    <%= f.text_area :body %>
                <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
            <% end %>
    <% end %>
</div>
</body>
