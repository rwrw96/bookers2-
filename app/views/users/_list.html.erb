<div class="col-md-3">
    <% if user_signed_in? %>
<body>
    <%= notice %>
    <%= alert %>
      
        
                <h2>User Info</h2>
                    
                        
                            <td><%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "default_image.jpg" %></td>
                            <table class="table">
                            <tr>
                            <th>name</th>
                            <th><%= user.name %></th>
                            </tr>
                            <tr>
                            <th>introduction</th>
                            <th><%= user.introduction %></th>
                            </tr>
                        </table>
                        <div class="btn btn-outline-secondary btn-block edit_user_1">
                            <div class="fas fa-user-cog">
                    <%= link_to "" , edit_user_path(user.id) %>
                        </div>
                        </div>
                <h2>New book</h2>
                    <%= form_with model:book , local:true do |f| %>
                        <p>Title</p>
                            <%= f.text_field :title %>
                        <p>Opinion</p>
                            <%= f.text_area :body %>
                        <div class="edit-btn">
                        <%= f.submit "Create Book" %>
                        </div>
                    <% end %>
                    <% end %>
</body>
</div>