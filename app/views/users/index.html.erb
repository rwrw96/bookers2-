<div class="row">
<%= render partial: 'users/list', locals: { book: @book , user: @user } %>


<div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
                <th>image</th>
                <th>name</th>
    </table>
<% @users.each do |user| %>
<table class="table">
<td><%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "default_image.jpg" %></td>
<td><%= user.name %></td>
<td><%= link_to "Show", user_path(user.id) %></td>
<% end %>
</table>
</div>
</div>
